# explicit ignores prevent accidental inclusion or context bloat)
Dockerfile # Ignore the main app Dockerfile if one exists in root
docker-compose.yml
.dockerignore
.git
.gitignore

# Ignore application code directories - ESSENTIAL!
backend/
static/
templates/

# Also explicitly ignore the backend requirements.txt
backend/requirements.txt

